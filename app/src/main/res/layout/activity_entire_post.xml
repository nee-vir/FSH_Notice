<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EntirePostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle"
            android:textColor="@color/white"
            android:text="Hello, This will contain the title."
            android:textSize="25dp"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/entire_title_s"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/entire_title_s"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="This is where the body is going to be"
            android:background="@drawable/rounded_rectangle2"
            android:id="@+id/entire_body_s"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_below="@+id/entire_body_s"
            android:layout_margin="10dp"
            android:id="@+id/entire_image_s"/>

    </RelativeLayout>

</ScrollView>